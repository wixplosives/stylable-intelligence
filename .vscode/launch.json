{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceRoot}/fixtures/demo",
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "preLaunchTask": "compile"
    },
    {
      "name": "Attach to running server",
      "type": "node",
      "request": "attach",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/dist/src/lib/**/*.js"
      ],
      "protocol": "inspector"
    },
    {
      "name": "test:e2e",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceRoot}/fixtures/e2e-cases",
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--extensionTestsPath=${workspaceRoot}/dist/test/e2e"
      ],
      "stopOnEntry": false,
      "sourceMaps": true,
      "preLaunchTask": "compile"
    },
    {
      "name": "test:unit",
      "request": "launch",
      "type": "node",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "-r",
        "@ts-tools/node/r",
        "test/lib/**/*.spec.ts"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}
